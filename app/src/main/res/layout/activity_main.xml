<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bkdn.maihuong.tinhtong2so.MainActivity">


    <Button
        android:id="@+id/btn_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_green_dark"
        android:text="Các kiểu lập trình sự kiện" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Số a:"
        android:layout_below="@+id/btn_title"
        android:padding="15dp"
        />


    <EditText
        android:id="@+id/etA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="25dp"
        android:ems="10"
        android:inputType="number"
        android:layout_alignTop="@+id/tv1"
        android:layout_toRightOf="@+id/tv2"
        android:layout_toEndOf="@+id/tv2" />
    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số b:"
        android:layout_below="@+id/tv1"
        android:padding="15dp"
        />

    <EditText
        android:id="@+id/etB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="25dp"
        android:layout_below="@+id/etA"
        android:layout_alignTop="@+id/tv2"
        android:layout_toRightOf="@+id/tv2"
        android:layout_toEndOf="@+id/tv2"
        android:ems="10"
        android:inputType="number"
        />

    <TextView
        android:id="@+id/tv_kq"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_green_dark"
        android:text="Kết quả"
        android:gravity="center"
        android:layout_above="@+id/btn_tong"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="26dp" />

    <Button
        android:id="@+id/btn_tong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tổng 2 số"
        android:onClick="btntong"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
